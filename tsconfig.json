{
  "compilerOptions": {
    "composite": false /* Enable constraints that allow a TypeScript project to be used with project references. */,
    "target": "ESNext" /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */,
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx",
    "moduleDetection": "force",
    "module": "ESNext" /* Specify what module code is generated. */,
    "rootDir": ".",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@common/*": ["common/*"],
      "@back/*": ["back/*"],
      "@front/*": ["front/*"],
      "@contracts/*": ["contracts/*"],
      "@1inch/limit-order-sdk": ["sdk-source/dist/esm/index.js"]
    },
    "types": ["@types/bun"],
    "allowImportingTsExtensions": false,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build" /* Specify an output folder for all emitted files. */,
    "noEmit": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true /* Enable all strict type-checking options. */,
    "skipLibCheck": true /* Skip type checking all .d.ts files. */,
    "allowArbitraryExtensions": true
  },
  "include": [
    "common/**/*.ts",
    "back/**/*.ts",
    "front/**/*.ts",
    "package.json",
    "deployments.json"
  ],
  "exclude": ["node_modules", "dist", "build", "contracts", "sdk-source"]
}
