{
  "name": "1edge",
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "author": "1edge Team",
  "description": "Advanced order manager for 1inch limit order protocol with automated trading strategies",
  "scripts": {
    "kill:back": "bun ./scripts/kill-on-port.ts ${API_PORT:-40005}",
    "kill:front": "bun ./scripts/kill-on-port.ts ${NEXT_PORT:-40006}",
    "kill:all": "bun run kill:back && bun run kill:front",
    "dev:back": "bun --watch back/index.ts",
    "dev:front": "cd front && bun run dev",
    "start:collector": "bun run back/services/collector.ts",
    "start:order-executor": "bun run back/services/orderExecutor.ts",
    "start:api": "bun run back/services/apiServer.ts",
    "start:keeper": "bun run back/services/keeper.ts",
    "start:status-checker": "bun run back/services/statusChecker.ts",
    "start:websocket": "bun run back/services/websocketServer.ts",
    "start:back": "bun ./scripts/start-back.ts",
    "start:services": "bun ./scripts/start-services.ts",
    "dev:services": "bun run start:collector & bun run start:api & bun run start:websocket & bun run start:status-checker & wait",
    "start:front": "bun run kill:front && cd front && bun run dev",
    "start:all": "bun run back/index.ts",
    "dev": "bun run start:back & bun run start:front",
    "format:check": "bunx prettier --check '**/*.{ts,js,json,md}'",
    "format": "bunx prettier --write '**/*.{ts,js,json,md}'",
    "lint": "oxlint . && bun run format:check",
    "lint:fix": "bun run format && oxlint --fix .",
    "typecheck": "tsc --noEmit",
    "build": "bun ./scripts/build.ts",
    "pre-commit": "bun run format && bun run lint && bun run typecheck && bun run build",
    "test:contracts": "cd contracts && npx hardhat test",
    "compile:contracts": "cd contracts && npx hardhat compile",
    "deploy:contracts": "cd contracts && npx hardhat run scripts/deploy.ts",
    "install:all": "bun install && cd front && bun install && cd ../contracts && npm install && cd ..",
    "test:websocket": "bun run scripts/test-websocket.ts",
    "test:ohlc": "bun run scripts/test-ohlc.ts"
  },
  "dependencies": {
    "@1inch/limit-order-sdk": "^4.9.5-rc.0",
    "@types/glob": "^8.1.0",
    "@types/ws": "^8.18.1",
    "ccxt": "^4.4.96",
    "dotenv": "^16.6.1",
    "ethers": "^6.15.0",
    "glob": "^11.0.3",
    "technicalindicators": "^3.1.0",
    "viem": "^2.33.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.16.5",
    "bun-plugin-dts": "^0.3.0",
    "oxlint": "^0.2.18",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  },
  "workspaces": [
    "front",
    "back",
    "contracts"
  ]
}
